{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'schedule:monthly',
    'group:allNonMajor',
    ':semanticPrefixFixDepsChoreOthers',
    ':automergePatch',
  ],
  labels: [
    'dependencies',
  ],
  rangeStrategy: 'bump',
  postUpdateOptions: [
    'npmDedupe',
  ],
  packageRules: [
    {
      description: 'Group Eleventy ecosystem packages together',
      groupName: 'eleventy-ecosystem',
      matchPackageNames: [
        '@quasibit/eleventy-plugin-sitemap',
        '/^@11ty//',
        '/^eleventy-/',
        '/^@.*eleventy/',
      ],
    },
    {
      description: 'Group CodeStitch packages together',
      groupName: 'codestitch-tools',
      matchPackageNames: [
        '/^@codestitchofficial//',
        '/^codestitch-/',
      ],
    },
    {
      description: 'Group build and CSS processing tools',
      groupName: 'build-tools',
      matchPackageNames: [
        'autoprefixer',
        'cssnano',
        'postcss',
        'esbuild',
        'sass',
      ],
    },
  ],
}
